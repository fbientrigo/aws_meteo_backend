{
    "name": "AWS Meteo Backend Dev",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python"
            }
        }
    },
    "remoteUser": "appuser",
    "forwardPorts": [
        8000
    ],
    "postCreateCommand": "pip install -r requirements.txt"
}